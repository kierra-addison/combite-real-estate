<div class="row">
  <div class="col-md-10 col-md-offset-1 home-search-bar">
    <%= search_form_for @q, url: search_posts_url, 
                            html: {method: :post, 
                            class: "input-group input-group-lg"} do |form| %>
      <%= form.search_field :title_or_description_or_post_attributes_attribute_name_or_post_attributes_attribute_value_cont, 
                            class: "form-control", 
                            placeholder: "Search for..." %>
      <span class="input-group-btn">
        <%= form.button "Go!", class: "btn btn-primary", type: "submit" %>
      </span>
    <% end %>
  </div>
</div>