<%= form_with(model: post_attribute, url: {action: action}, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :attribute_name %>
    <%= form.text_field :attribute_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :attribute_value %>
    <%= form.text_field :attribute_value, class: 'form-control' %>
  </div>
  
  <div class="panel-footer">
    <div class="form-group text-center">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', @post_attribute.post_id.present? ? edit_post_url(id: @post_attribute.post_id) : edit_post_url(id: params[:post_id]) %>
