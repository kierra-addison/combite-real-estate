<%= form_with(model: post_attribute, url: {action: action}, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :attribute_name %>
    <%= form.text_field :attribute_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :attribute_value %>
    <%= form.text_field :attribute_value, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
