<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/errors', obj: @user %>
    <%= render 'shared/flash' if flash_list %>

    <div class="panel panel-default">
      <div class="panel-body">
        <h1>Change password</h1>

        <%= form_for(@user, url: {action: 'change_password'}) do |form| %>
          <div class="form-group">
            <%= form.label 'Old password'%>
            <%= password_field_tag :current_password, params[:current_password], class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label 'New password' %>
            <%= form.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label 'Confirm password' %>
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit class: "btn btn-success" %>
          </div>
        <% end %>
        
        <%= link_to 'Back', users_url %>
      </div>
    </div>
  </div>
</div>