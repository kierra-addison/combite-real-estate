<!-- Modal -->
<div class="modal fade" id="contactModal" role="dialog">
  <div class="modal-dialog">
  
    <!-- Modal content-->
    <div class="modal-content">
      <form class=""
              v-on:submit.prevent="createMessage($event)">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 class="modal-title">Contact Us</h3>
        </div>

        <div class="row">
          <div class="contact text-center">
            <div class="col-lg-6 col-md-6">
              <div class="contact-details">
                <%= link_to "https://www.facebook.com/NegrosHomesAndcondominiums/", target: :_blank do %>
                  <div><%= fa_icon("facebook-square 2x") %></div>
                  <div><strong>Negros Homes And Condominiums</strong></div>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6 col-md-6">
              <div class="contact-details">
                <div><%= fa_icon("phone-square 2x") %></div>
                <div><strong>Smart</strong> +63 949-466-4194</div>
                <div><strong>Globe</strong> +63 917-649-7656</div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-success">
          <div class="panel-heading">Your details are guaranteed safe</div>
          <div class="panel-body">
            <em>This website's database is secured with AES 256 encryption</em>
          </div>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-lg-6 col-md-6">
              <div class="form-group">
                <label>First name</label>
                <input class="form-control" 
                        type="text" 
                        name="first_name" 
                        required="true" 
                        minlength="2" 
                        maxlength="20" 
                        v-model="message.first_name">
              </div>
            </div>

            <div class="col-lg-6 col-md-6">
              <div class="form-group">
                <label>Last name</label>
                <input class="form-control" 
                        type="text" 
                        name="last_name" 
                        required="true" 
                        minlength="2" 
                        maxlength="20" 
                        v-model="message.last_name">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6 col-md-6">
              <div class="form-group">
                <label>Email</label>
                <input class="form-control" 
                        type="email" name="email" 
                        required="true" 
                        minlength="8" 
                        maxlength="40" 
                        v-model="message.email">
              </div>
            </div>

            <div class="col-lg-6 col-md-6">
              <div class="form-group">
                <label>Mobile number</label>
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">+63</span>
                  <input class="form-control" 
                          type="number" 
                          name="mobile_number" 
                          required="true" 
                          oninput="javascript: if (this.value.length > this.maxLength) 
                                                    this.value = this.value.slice(0, this.maxLength);"
                          maxlength = "10"
                          v-model="message.mobile_number">
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label>Enquiry</label>
            <textarea class="form-control" 
                      name="enquiry" 
                      required="true" 
                      minlength="10" 
                      maxlength="2000" 
                      rows="8" 
                      v-model="message.enquiry"></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-success">Send</button>
        </div>
      </form>
    </div>
  </div>
</div>